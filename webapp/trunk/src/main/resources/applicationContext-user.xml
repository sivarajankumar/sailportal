<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:util="http://www.springframework.org/schema/util"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

  <bean id="sdsUserDao"
    class="net.sf.sail.webapp.dao.sds.impl.HttpRestSdsUserDao">
    <property name="sdsUserCreateCommand">
      <ref bean="sdsUserCreateCommand" />
    </property>
  </bean>

  <bean id="sdsUser" scope="prototype" factory-bean="sdsUserDao"
    factory-method="createDataObject" />

  <bean id="userDao"
    class="net.sf.sail.webapp.dao.user.impl.HibernateUserDao">
    <property name="sessionFactory">
      <ref bean="sessionFactory" />
    </property>
  </bean>

  <bean id="user" scope="prototype" factory-bean="userDao"
    factory-method="createDataObject" />

  <bean id="userService"
    class="net.sf.sail.webapp.service.impl.UserServiceImpl">
    <property name="userDetailsDao">
      <ref bean="userDetailsDao" />
    </property>
    <property name="grantedAuthorityDao">
      <ref bean="grantedAuthorityDao" />
    </property>
    <property name="userDao">
      <ref local="userDao" />
    </property>
    <property name="sdsUserDao">
      <ref local="sdsUserDao" />
    </property>
  </bean>

</beans>