<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="userDetailsService"
    class="net.sf.sail.webapp.service.authentication.impl.UserDetailsServiceImpl">
    <property name="userDetailsDao">
      <ref local="userDetailsDao" />
    </property>
  </bean>

  <bean id="userDetailsDao"
    class="net.sf.sail.webapp.dao.authentication.impl.HibernateUserDetailsDao">
    <property name="sessionFactory">
      <ref bean="sessionFactory" />
    </property>
  </bean>

  <bean id="grantedAuthorityDao"
    class="net.sf.sail.webapp.dao.authentication.impl.HibernateGrantedAuthorityDao">
    <property name="sessionFactory">
      <ref bean="sessionFactory" />
    </property>
  </bean>

  <bean id="mutableGrantedAuthority" scope="prototype"
    class="net.sf.sail.webapp.domain.authentication.impl.HibernateGrantedAuthority" />

  <bean id="mutableUserDetails" scope="prototype"
    class="net.sf.sail.webapp.domain.authentication.impl.HibernateUserDetails" />

</beans>