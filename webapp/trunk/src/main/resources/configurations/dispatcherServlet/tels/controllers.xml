<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

    <!-- Custom controllers -->

    <bean id="studentUserDetailsValidator"
        class="org.telscenter.sail.webapp.presentation.validators.StudentUserDetailsValidator" />

    <bean id="teacherUserDetailsValidator"
        class="org.telscenter.sail.webapp.presentation.validators.TeacherUserDetailsValidator" />
        
     <bean id="lostTeacherValidator"
        class="org.telscenter.sail.webapp.presentation.validators.LostTeacherValidator" />

    <bean
		class="org.telscenter.sail.webapp.presentation.web.controllers.TestController" />

    <bean id="teacherIndexController"
    	class="org.telscenter.sail.webapp.presentation.web.controllers.TeacherIndexController" />
    
    <bean id="registerController" 
        class="org.telscenter.sail.webapp.presentation.web.controllers.RegisterController" />

    <bean id="countriesController" 
        class="org.telscenter.sail.webapp.presentation.web.controllers.CountriesController" />

    <bean id="statesController" 
        class="org.telscenter.sail.webapp.presentation.web.controllers.StatesController" />

    <bean id="helpController" 
        class="org.telscenter.sail.webapp.presentation.web.controllers.HelpController" />
    
    <bean id="indexController"
        class="org.telscenter.sail.webapp.presentation.web.controllers.IndexController" />

	<bean id="setupRun1Controller"
		class="org.telscenter.sail.webapp.presentation.web.controllers.SetupRun1Controller" />

	<bean id="setupRun2Controller"
		class="org.telscenter.sail.webapp.presentation.web.controllers.SetupRun2Controller" />

	<bean id="setupRun3Controller"
		class="org.telscenter.sail.webapp.presentation.web.controllers.SetupRun3Controller" />

	<bean id="setupRun4Controller"
		class="org.telscenter.sail.webapp.presentation.web.controllers.SetupRun4Controller" />

	<bean id="setupRun5Controller"
		class="org.telscenter.sail.webapp.presentation.web.controllers.SetupRun5Controller" />

	<bean id="setupRun6Controller"
		class="org.telscenter.sail.webapp.presentation.web.controllers.SetupRun6Controller" />

	<bean id="setupRun7Controller"
		class="org.telscenter.sail.webapp.presentation.web.controllers.SetupRun7Controller" />
		    
    <bean id="lostPasswordMainController"
		class="org.telscenter.sail.webapp.presentation.web.controllers.LostPasswordMainController"/>
		
	<bean id="lostPasswordTeacherController"
		class="org.telscenter.sail.webapp.presentation.web.controllers.LostPasswordTeacherController">	
		     <property name="userService" ref="userService" />
        <property name="commandName" value="userDetails" />
        <property name="commandClass"
            value="org.telscenter.sail.webapp.domain.authentication.impl.TeacherUserDetails" />
       <property name="validator" ref="lostTeacherValidator" />
       <property name="formView" value="lostpasswordteacher" />
       <property name="successView" value="lostpasswordteacherresult.html" />
    </bean>
    
	<bean id="lostPasswordStudentController"
		class="org.telscenter.sail.webapp.presentation.web.controllers.LostPasswordStudentController"/>	
		
	<bean id="findStudentPasswordController"
		class="org.telscenter.sail.webapp.presentation.web.controllers.FindStudentPasswordController"/>	

	<bean id="findStudentUsernameController"
		class="org.telscenter.sail.webapp.presentation.web.controllers.FindStudentUsernameController"/>		
			
</beans>