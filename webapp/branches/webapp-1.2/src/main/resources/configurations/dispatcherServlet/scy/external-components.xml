<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
        "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="externalComponentManager" class="eu.scy.server.externalcomponents.ExternalComponentManager" singleton="true">
		<property name="externalComponents">
			<list>
                <ref local="sqlSpacesComponent"/>
                <ref local="swatComponent"/>
				<ref local="scyHubExternalComponent"/>

			</list>
		</property>
	</bean>


    <bean id="sqlSpacesComponent" class="eu.scy.server.externalcomponents.sqlspaces.SQLSpacesComponent" singleton="true"/>
    <bean id="swatComponent" class="eu.scy.server.externalcomponents.swat.SWATComponent" singleton="true" />
    <bean id="scyHubExternalComponent" class="eu.scy.server.externalcomponents.scyhub.SCYHubExternalComponent"  singleton="true"/>
</beans>