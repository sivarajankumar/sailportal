<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:dwr="http://www.directwebremoting.org/schema/spring-dwr"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-2.0.xsd
	http://www.directwebremoting.org/schema/spring-dwr
	http://www.directwebremoting.org/schema/spring-dwr-2.0.xsd">

    <bean id="signupController" class="eu.scy.controllers.EmptyController">
		<!--property name="userService" ref="userService" /-->
		<!--property name="commandName" value="userDetails" /-->
		<!--property name="commandClass" value="eu.scy.core.model.impl.SCYUserDetails"/-->
		<!--property name="validator" ref="userDetailsValidator" /-->
		<!--property name="formView" value="signup" /-->
		<!--property name="successView" value="signup.html" /-->
	</bean>
    
    <bean id="registerstudentController" class="eu.scy.controllers.RegisterStudentForSCYController">
    	<property name="userService" ref="userService" />
        <property name="scenarioService" ref="scenarioService"/>
    	<property name="commandName" value="userDetails" />
        <property name="commandClass" value="eu.scy.core.model.impl.SCYStudentUserDetails"/>
    	<property name="formView" value="student/registerstudent" />
    	<property name="successView" value="student/registerSCYStudentConfirm" />
    </bean>

    <bean id="addNewStudentController" class="eu.scy.controllers.teacher.AddNewStudentController">
    	<property name="userService" ref="userService" />
        <property name="commandName" value="userDetails" />
        <property name="commandClass" value="eu.scy.core.model.impl.SCYStudentUserDetails"/>
    	<property name="formView" value="teacher/addNewStudent" />
    	<property name="successView" value="teacher/studentList" />
    </bean>

    <bean id="registerTeacherController" class="eu.scy.controllers.teacher.RegisterTeacherController">
        <property name="commandName" value="userDetails"/>
        <property name="commandClass" value="eu.scy.core.model.impl.SCYTeacherUserDetails"/>
        <property name="formView" value="teacher/registerteacher"/>
        <property name="successView" value="teacher/registerSCYTeacherConfirm"/>
        <property name="userService" ref="userService"/>
    </bean>

    <bean id="appIndexController" class="eu.scy.controllers.app.AppIndexController">
        <property name="userService" ref="userService"/>
    </bean>
    
    <bean id="userAdminIndexController" class="eu.scy.controllers.app.useradmin.UserAdminIndexController">
        <property name="userService" ref="userService"/>
    </bean>

    <bean id="editUserStudentController" class="eu.scy.controllers.app.useradmin.EditStudentController">
        <property name="userService" ref="userService"/>
    </bean>

    <bean id="studentProfileController" class="eu.scy.controllers.student.StudentProfileController">

    </bean>

    <bean id="fileUploadController" class="eu.scy.controllers.fileupload.FileUploadController">
        <property name="commandClass" value="eu.scy.controllers.fileupload.FileUploadBean"/>
        <property name="formView" value="fileuploadform"/>
        <property name="successView" value="student/profile"/>
        <property name="userService" ref="userService"/>
    </bean>

    <bean id="fileStreamerController" class="eu.scy.controllers.common.FileStreamerController">
        <property name="userService" ref="userService"/>
    </bean>

    <bean id="studentListController" class="eu.scy.controllers.teacher.StudentListController">
        <property name="userService" ref="userService"/>
    </bean>
    
    <bean id="viewStudentDetailsController" class="eu.scy.controllers.teacher.StudentDetailsController">
        <property name="userService" ref="userService"/>
        <property name="studentPedagogicalPlanPersistenceService" ref="studentPedagogicalPlanService"/>
        <property name="pedagogicalPlanPersistenceService" ref="pedagogicalPlanPersistenceService"/>
    </bean>

    <bean id="selectPedagogicalPlanForStudentController" class="eu.scy.controllers.teacher.SelectPedagogicalPlanForStudent">
        <property name="userService" ref="userService"/>
        <property name="pedagogicalPlanPersistenceService" ref="pedagogicalPlanPersistenceService"/>
    </bean>

    <bean id="studentPlanController" class="eu.scy.controllers.teacher.StudentPlanController">
        <property name="userService" ref="userService"/>
        <property name="studentPedagogicalPlanPersistenceService" ref="studentPedagogicalPlanService"/>
        <property name="pedagogicalPlanPersistenceService" ref="pedagogicalPlanPersistenceService"/>
    </bean>

    <bean id="studentActivityDetailsController" class="eu.scy.controllers.teacher.StudentActivityDetailsController">
        <property name="userService" ref="userService"/>
        <property name="studentPedagogicalPlanPersistenceService" ref="studentPedagogicalPlanService"/>
        <property name="pedagogicalPlanPersistenceService" ref="pedagogicalPlanPersistenceService"/>
    </bean>




</beans>